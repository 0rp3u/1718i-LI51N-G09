<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pdm_1718i.yamda.ui.activities.MainActivity">

    <LinearLayout
        style="@style/DefaultLayoutMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Now Playing Movies -->
        <TextView
            style="@style/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/now_playing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/popular_image_1"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/popular_image_2"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/popular_image_3"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/popular_image_4"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:onClick="onPopularMore"
                android:src="@mipmap/ic_view_list" />

        </LinearLayout>


        <!-- Popular Movies -->
        <TextView
            style="@style/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/theaters_image_1"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/theaters_image_2"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/theaters_image_3"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/theaters_image_4"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:onClick="onInTheatersMore"
                android:src="@mipmap/ic_view_list" />

        </LinearLayout>


        <!-- Upcoming Movies -->
        <TextView
            style="@style/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upcoming" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/upcoming_image_1"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/upcoming_image_2"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/upcoming_image_3"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageView
                android:id="@+id/upcoming_image_4"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_movie_thumbnail" />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:onClick="onUpcomingMore"
                android:src="@mipmap/ic_view_list" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
